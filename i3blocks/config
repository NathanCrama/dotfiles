# Guess the weather hourly
[weather]
# command=curl -Ss 'https://wttr.in/liege' | cut -c 16- | head -2 | xargs echo
command=/home/kurse/.config/i3blocks/scripts/weather.sh
interval=3600
# label=  
color=#A4C2F4

[bandwidth]
interval=10
command=/usr/lib/i3blocks/bandwidth

# Query my default IP address only on startup
[ip]
command=ip route get 1 | awk '{print $7;exit}'
interval=once
label=  

[disk]
interval=600
label=  
command=/home/kurse/.config/i3blocks/scripts/i3diskusage.sh

[CPU]
# command=sh /home/kurse/.config/i3blocks/scripts/i3cpu.sh
command=/home/kurse/.config/i3blocks/scripts/i3cpu.sh 
interval=5
label=  

[mem]
command=sh /home/kurse/.config/i3blocks/scripts/i3mem.sh
interval=10
label=  

# Update time every 5 seconds
[time]
command=date +%T 
interval=1
label=  
