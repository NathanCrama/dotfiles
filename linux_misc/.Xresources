
ft.dpi:        96
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.autohint:  false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

XTerm*background:        #a9a9a9
XTerm*foreground:        #272727
XTerm*pointerColor:      #e44138 
XTerm*faceName:          Hasklig
XTerm*faceSize:          11
XTerm*reverseVideo:      on 
XTerm*selectToClipboard: true 
XTerm*borderWidth:      0

*background:                      #e44138
*foreground:                      #272727
*fading:                          8
*fadeColor:                       black
*cursorColor:                     #e44138
*pointerColorBackground:          #2B2C2B
*pointerColorForeground:          #16A085

!! black dark/light
*color0:                          #272727
*color8:                          #989898

!! red dark/light
*color1:                          #e44138
*color9:                          #ab4642

!! green dark/light
*color2:                          #7E807E
*color10:                         #8D8F8D

!! yellow dark/light
*color3:                          #f7ca88
*color11:                         #f7ca88

!! blue dark/light
*color4:                          #7cafc2
*color12:                         #7cafc2

!! magenta dark/light
*color5:                          #ba8baf
*color13:                         #ba8baf

!! cyan dark/light
*color6:                          #e44138
*color14:                         #e44138

!! white dark/light
*color7:                          #d8d8d8
*color15:                         #f8f8f8

Xcursor.theme: xcursor-breeze
Xcursor.size:                     0

urxvt.font:                       xft:Hasklig:style=Regular:pixelsize=15:antialias=true 
urxvt.boldFont:                   xft:Hasklig:bold:size=16:antialias=true

urxvt*depth:                      32
urxvt*background:                 rgba:222f/222f/222f/cf00
urxvt*foreground:                 grey
urxvt*scrollBar:                  false
urxvt*mouseWheelScrollPage:       true
urxvt*cursorBlink:                true
urxvt*saveLines:                  5000

! Normal copy-paste keybindings without perls
urxvt.iso14755:                   false
urxvt.keysym.Shift-Control-V:     eval:paste_clipboard
urxvt.keysym.Shift-Control-C:     eval:selection_to_clipboard
!Xterm escape codes, word by word movement
urxvt.keysym.Control-Left:        \033[1;5D
urxvt.keysym.Shift-Control-Left:  \033[1;6D
urxvt.keysym.Control-Right:       \033[1;5C
urxvt.keysym.Shift-Control-Right: \033[1;6C
urxvt.keysym.Control-Up:          \033[1;5A
urxvt.keysym.Shift-Control-Up:    \033[1;6A
urxvt.keysym.Control-Down:        \033[1;5B
urxvt.keysym.Shift-Control-Down:  \033[1;6B
